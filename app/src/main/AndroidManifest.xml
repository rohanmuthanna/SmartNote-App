<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noted">

    <application
        android:allowBackup="true"
        android:icon="@drawable/smartnote"
        android:label="SmartNote"
        android:roundIcon="@drawable/smartnote"
        android:supportsRtl="true"
        android:theme="@style/Theme.Noted">
        <activity
            android:name=".notedetails"
            android:exported="true"
            android:parentActivityName=".notesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".editnoteactivity"
            android:exported="true"
            android:parentActivityName=".notesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".createnote"
            android:exported="true"
            android:parentActivityName=".notesActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".notesActivity"
            android:exported="true" />
        <activity
            android:name=".forgotpassword"
            android:exported="true" />
        <activity
            android:name=".signup"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>